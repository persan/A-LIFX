with "gnatcoll_sqlite.gpr";
with "gnatcoll.gpr";
with "../lifx.gpr";
with "aws";

project LIFX.Tests is

   for Languages use ("Ada", "Makefile");
   for Object_Dir use ".obj";
   for Main use ("lifx-tests-main.adb");

   package Compiler is
      for Driver ("makefile") use "";
   end Compiler;

   package Binder is
      for Default_Switches ("ada") use ("-E");
   end Binder;

   package Make is
      for Makefile use "Makefile";
   end Make;

   package Naming is
      for Body_Suffix ("makefile") use ".mk";
      for Implementation_Exceptions ("makefile") use ("Makefile");
   end Naming;

   for Exec_Dir use "bin";
   for Source_Dirs use (".", "src/**");

end LIFX.Tests;
